#!/bin/bash

set -eufo pipefail

{{ if .work -}}

{{ $brews := list 
    "asn"
    "cidr2range"
    "grepcidr"
    "range2cidr"
    "trippy" -}}
{{ $casks := list
    "webex"
    "wireshark" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

{{ end -}}