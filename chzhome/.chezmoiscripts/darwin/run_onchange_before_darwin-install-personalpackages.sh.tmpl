#!/bin/bash

set -eufo pipefail

{{ if .personal -}}

{{ $brews := list 
    -}}
{{ $casks := list
    "active-trader-pro"
    "discord"
    "parsec"
    "steam" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

{{ end -}}